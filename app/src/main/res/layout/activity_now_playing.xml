<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wa12rior.gmail.com.kamify.NowPlayingActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder Name"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="placeholder Author"/>

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/placeholder"/>

    <SeekBar
        android:id="@+id/progress"
        android:layout_margin="20dp"
        android:backgroundTint="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="10"/>

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pause_circle_outline_black_24dp"/>

    <Button
        android:id="@+id/library_button"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Library"/>
</LinearLayout>
